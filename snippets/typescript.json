{
	// Place your snippets for typescript here. Each snippet is defined under a snippet name and has a prefix, body and 
	// description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
	// $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the 
	// same ids are connected.
	// Example:
	"Print to console with condition": {
		"prefix": "logVariableWithCondition",
		"body": [
			"logVarWithCondition($1, $2,'$3');"
		],
		"description": "Log output to console"
	},
	"Print to console": {
		"prefix": "logVariable",
		"body": [
			"logVar($1,'$1');"
		],
		"description": "Log output to console"
	},
	"Print to console with color": {
		"prefix": "logColor",
		"body": [
			"console.log(`%c $2: `, 'color: ${3:red}', $1);"
		],
		"description": "Log output to console"
	},
	"Create a new class": {
		"prefix": "newClass",
		"body": [
			"export class $1 {\n\tconstructor(\n\t\tpublic property$2: string = '',\n\t) {}\n}"
		],
		"description": "Log output to console"
	},
	"try catch finally": {
		"prefix": "tryCatchFinally",
		"body": [
			"try {\n\t$1\n} catch (err: any) {\n\t$2\n} finally {\n\t$3\n}"
		],
		"description": "Log output to console"
	},
	"Create a new method": {
		"prefix": "newMethod",
		"body": [
			"$1($2) {\n\t$3\n}"
		],
		"description": "Log output to console"
	},
	"delay": {
		"prefix": "awaitPromise",
		"body": [
			"await new Promise(resolve => setTimeout(resolve, ${1:3000}));"
		],
		"description": "Log output to console"
	},
	"if statement": {
		"prefix": "if?::",
		"body": [
			"$1 ? '$2' : '$3'"
		],
		"description": "Log output to console"
	}
}